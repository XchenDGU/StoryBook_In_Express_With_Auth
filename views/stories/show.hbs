<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>

<div class="divider"></div>
<div class="row">
    <div class="col s2 m1">
        <img style="margin-top:10px;"src="{{loggedImg}}" class="circle responsive-img img-tiny">
        
    </div>
    <div class="col s10 m11" >
        <form id="commentForm"action="/stories/comments/{{story._id}}" method="post" autocomplete="off">
            <div class="row" style="margin-bottom:0px;">
                <div class="input-field">
                    <textarea name="content" id="textarea1" class="materialize-textarea" placeholder="Add a public comment..."></textarea>
                </div>
            </div>

            <div class="row">
                <input style="float:right; margin" type="submit" value="Comment" class="btn">
                <a onclick="resetCommentForm()" style="float:right; margin-right:5px"  class="btn orange">Cancel</a>
            </div>
        </form>

        <script>
            function resetCommentForm(){
                document.getElementById("commentForm").reset();
            }
        </script>

    </div>
</div>

<div class="divider"></div>
<div class="row">
    <h6 style="text-align: center;"><a href="">View Comments</a></h6>
</div>
<ul class="collection">
    {{#each comments}}
        <li class="collection-item avatar border-less">
            <img class ="circle img-tiny"src="{{user.image}}" alt="">
            <span class="title">{{user.displayName}}  <small>{{formatDate createdAt 'lll'}}</small></span>
            <p>{{content}}</p>
            <a class="btn"><i class="far fa-thumbs-up"></i></a> 
            <a class="btn"><i class="far fa-thumbs-down"></i></a>
            <a class="waves-effect waves-teal btn-flat">Reply</a>
        </li>
    {{else}}
        <h6 style="text-align: center">There is no comment yet...</h6>
    {{/each}}
</ul>